<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <include layout="@layout/loading_overlay"/>


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:fontFamily="@font/open_sans_light"
            android:background="@drawable/event_calendar_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:mcv_headerTextAppearance="@style/CustomTextAppearance"
            app:mcv_weekDayTextAppearance="@style/CustomTextAppearance"
            app:mcv_showOtherDates="all"
            app:mcv_selectionColor="@color/uqcsBlue"
            />


    <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="30sp"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/uqcsGray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendarView"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateText"
            app:layout_constraintBottom_toTopOf="@id/addEventButton">
            <TextView
                    android:id="@+id/eventName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/uqcsGray"
                    android:gravity="center"
                    android:fontFamily="@font/open_sans_light"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/eventDetailsButton"/>

            <Button
                    android:id="@+id/eventDetailsButton"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/uqcs_button"
                    android:text="@string/view_details"
                    android:fontFamily="@font/open_sans_semibold"
                    app:layout_constraintTop_toTopOf="@id/eventName"
                    app:layout_constraintBottom_toBottomOf="@id/eventName"
                    app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>



    <Button
            android:id="@+id/addEventButton"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/uqcs_button"
            android:text="@string/add_event"
            android:fontFamily="@font/open_sans_semibold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    
</android.support.constraint.ConstraintLayout>