<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <include layout="@layout/loading_overlay"/>

    <Button
            android:id="@+id/edit_ll"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/back_btn"
            android:background="@drawable/documentation_button_background"
            android:fontFamily="@font/open_sans_regular"
            android:text="Edit"
            android:textColor="@color/uqcsGray"
            android:drawableEnd="@android:drawable/ic_menu_edit"
            />

    <Button
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/edit_ll"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/documentation_button_background"
            android:fontFamily="@font/open_sans_regular"
            android:text="Back"
            android:textColor="@color/uqcsGray"
            android:drawableEnd="?attr/homeAsUpIndicator"
            />

    <ru.noties.markwon.view.MarkwonView
            android:id="@+id/markdown_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="25dp"
            android:visibility="gone"
            android:textColor="@color/uqcsGray"
            android:fontFamily="@font/open_sans_regular"
            android:background="@drawable/documentation_background"
            app:layout_constraintTop_toBottomOf="@id/edit_ll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    <ListView
            android:id="@android:id/list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/uqcsGray"
            android:background="@color/uqcsGray"
            android:fontFamily="@font/open_sans_regular"
            app:layout_constraintTop_toBottomOf="@id/edit_ll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

    </ListView>


</android.support.constraint.ConstraintLayout>